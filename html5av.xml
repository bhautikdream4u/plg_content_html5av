- <files>
  <folder>language</folder> 
  <folder>tmpl</folder> 
  <filename plugin="html5av">html5av.php</filename> 
  <filename>index.html</filename> 
  </files>
- <media destination="plg_content_html5av" folder="media">
  <folder>img</folder> 
  <folder>css</folder> 
  <folder>js</folder> 
  <filename>index.html</filename> 
  </media>
- <config>
- <fields name="params">
- <fieldset name="basic">
  <field name="base_folder" type="text" default="images/media/" required="true" label="PLG_CONTENT_HTML5AV_FIELD_BASE_FOLDER_LABEL" description="PLG_CONTENT_HTML5AV_FIELD_BASE_FOLDER_DESC" /> 
- <field name="media_preload" type="radio" class="btn-group" default="1" label="PLG_CONTENT_HTML5AV_FIELD_MEDIA_PRELOAD_LABEL" description="PLG_CONTENT_HTML5AV_FIELD_MEDIA_PRELOAD_DESC">
  <option value="0">JNo</option> 
  <option value="1">JYes</option> 
  </field>
- <field name="show_player_controls" type="radio" class="btn-group" default="1" label="PLG_CONTENT_HTML5AV_FIELD_SHOW_PLAYER_CONTROLS_LABEL" description="PLG_CONTENT_HTML5AV_FIELD_SHOW_PLAYER_CONTROLS_DESC">
  <option value="0">JHide</option> 
  <option value="1">JShow</option> 
  </field>
- <field name="add_styles" type="radio" class="btn-group" default="1" label="PLG_CONTENT_HTML5AV_FIELD_ADD_STYLES_LABEL" description="PLG_CONTENT_HTML5AV_FIELD_ADD_STYLES_DESC">
  <option value="0">JNo</option> 
  <option value="1">JYes</option> 
  </field>
  </fieldset>
- <fieldset name="advanced">
- <field name="execution_side" type="list" default="0" label="PLG_CONTENT_HTML5AV_FIELD_EXECUTION_SIDE_LABEL" description="PLG_CONTENT_HTML5AV_FIELD_EXECUTION_SIDE_DESC">
  <option value="site">PLG_CONTENT_HTML5AV_FIELD_OPTION_FRONTEDN</option> 
  <option value="admin">PLG_CONTENT_HTML5AV_FIELD_OPTION_BACKEND</option> 
  <option value="both">PLG_CONTENT_HTML5AV_FIELD_OPTION_BOTH_SIDES</option> 
  </field>
- <field name="debug_mode" type="radio" class="btn-group" default="0" label="PLG_CONTENT_HTML5AV_DEBUG_MODE_LABEL" description="PLG_CONTENT_HTML5AV_DEBUG_MODE_DESC">
  <option value="0">JNo</option> 
  <option value="1">JYes</option> 
  </field>
  </fieldset>
  </fields>
  </config>
  </extension>
